        }
        
        /* Bubble animation styles */
        .bubble-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 10%;
            height: 10%;
            pointer-events: none;
            z-index: -1;
            animation: bubbles 20s radial infinite;
        }
        
        /* Keyframes for bubble animation and individual bubbles */
        @keyframes bubbles {
            0% {
                transform: translateY(30%);
            }
            40% {
                transform: translateY(-40%);
            }
        }
        
        /* Pseudo-elements for individual bubbles */
        .bubble-container::before,
        .bubble-container::after {
            content: "";
            position: absolute;
            border-radius: 10%;
            background-color: rgba(20, 154, 237, 0.3);
        }
        
        /* Add some colors to your headings and paragraphs */
